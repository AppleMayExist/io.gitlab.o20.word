{
    "id": "org.o20.word",
    "branch": "master",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.13",
    "sdk": "org.kde.Sdk",
    "command": "word64.run",
    "tags": ["beta"],
    "desktop-file-name-suffix": " Beta",
    "finish-args": ["--share=ipc", "--socket=x11", "--socket=wayland", "--filesystem=host" ],
    "separate-locales": false,
    "modules": [
        {
            "name": "o20coreapps",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "file",
                    "path": "org.o20.word.appdata.xml"
                },
                {
                     "type": "git",
		     "url": "https://gitlab.com/abstractsoftware/o20/o20coreapps.git",
		     "branch": "master" 
		}
            ],
            "build-commands": [
	        "install -D ../org.o20.word.appdata.xml /app/share/appdata/org.o20.word.appdata.xml"
	    ]
        }
    ] 
}


